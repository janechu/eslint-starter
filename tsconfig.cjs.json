{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "dist",
        "lib": [
            "DOM",
            "ES6",
        ],
        "module": "CommonJS",
        "moduleResolution": "Node16",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.invalid.ts", "src/**/*.valid.ts", "src/**/*.spec.ts"]
}
